{
    "id": "https://schema.linterhub.com/bundle.json",
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "This schema describes the bundle of linters",
    "description": "The linterhub bundle",
    "type": "object",
    "patternProperties": {
        "^.*$": {
            "allOf": [
                {
                    "$ref": "#/definitions/item"
                }
            ]
        }
    },
    "additionalItems": false,
    "definitions": {
        "item": {
            "type": "object",
            "description": "The item in a bundle that describes the linter",
            "properties": {
                "deps": {
                    "type": "object",
                    "description": "The linter deps",
                    "$ref": "https://schema.linterhub.com/deps.json"
                },
                "meta": {
                    "type": "object",
                    "description": "The linter meta",
                    "$ref": "https://schema.linterhub.com/meta.json"
                }
            }
        }
    }
}
