{
    "id": "https://schema.linterhub.com/meta.json",
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "This schema describes the linter definition",
    "description": "The meta information of linter",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "The linter id, used only when the linter name is not unique",
            "default": ""
        },
        "name": {
            "type": "string",
            "description": "The linter official name, may not be unique"
        },
        "alias": {
            "type": "array",
            "description": "List of linter aliases.",
            "items": {
                "type": "string"
            }
        },
        "description": {
            "type": "string",
            "description": "The linter official description"
        },
        "url": {
            "type": "string",
            "description": "The linter url (homepage, documentation or repository)",
            "format": "uri"
        },
        "languages": {
            "type": "array",
            "description": "The list of supported languages",
            "items": {
                "$ref": "#/definitions/language"
            }
        },
        "extensions": {
            "type": "array",
            "description": "Common file extensions parsed by linter, if empty then corresponding language extensions are used",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/extension"
                    },
                    {
                        "$ref": "#/definitions/language"
                    }
                ]
            }
        },
        "configs": {
            "type": "array",
            "description": "List of file names which could be treated as linter config",
            "items": {
                "type": "string"
            }
        },
        "license": {
            "type": "string",
            "description": "The linter license",
            "$ref": "#/definitions/license"
        },
        "agreement": {
            "type": "string",
            "description": "The linter custom agreement"
        }
    },
    "required": [
        "name",
        "description",
        "license"
    ],
    "additionalProperties": true,
    "definitions": {
        "license": {
            "type": "string",
            "description": "The linter license",
            "oneOf": [
                {
                    "type": "string",
                    "enum": [
                        "custom"
                    ]
                },
                {
                    "$ref": "https://schema.linterhub.com/license.json"
                }
            ]
        },
        "language": {
            "description": "The programming language",
            "type": "string",
            "oneOf": [
                {
                    "type": "string",
                    "enum": [
                        "any"
                    ]
                },
                {
                    "$ref": "https://schema.linterhub.com/language.json"
                }
            ]
        },
        "extension": {
            "description": "The filename extension",
            "type": "string",
            "pattern": "^\\..*"
        }
    }
}
