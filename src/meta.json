{
    "$schema": "https://schema.linterhub.com/schemaver.json",
    "$version": "1.0.0",
    "id": "https://schema.linterhub.com/meta.json",
    "type": "object",
    "title": "Linter metainformation",
    "description": "The schema of linter meta information",
    "properties": {
        "id": {
            "type": "string",
            "title": "Id",
            "description": "The URI to the latest version of this file",
            "format": "uri"
        },
        "name": {
            "type": "string",
            "title": "Name",
            "description": "The linter original name"
        },
        "description": {
            "type": "string",
            "description": "The linter official description"
        },
        "url": {
            "type": "string",
            "description": "The linter url (homepage, documentation or repository)",
            "format": "uri"
        },
        "languages": {
            "type": "array",
            "description": "The list of supported languages",
            "items": {
                "$ref": "#/definitions/language"
            }
        },
        "extensions": {
            "type": "array",
            "description": "Common file extensions parsed by linter, if empty then corresponding language extensions are used",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/extension"
                    },
                    {
                        "$ref": "#/definitions/language"
                    }
                ]
            }
        },
        "configs": {
            "type": "array",
            "description": "List of file names which could be treated as linter config",
            "items": {
                "type": "string"
            }
        },
        "license": {
            "type": "string",
            "description": "The linter license",
            "$ref": "./license.json"
        },
        "agreement": {
            "type": "string",
            "description": "The linter custom agreement"
        }
    },
    "required": [
        "id",
        "license"
    ],
    "additionalProperties": true,
    "definitions": {
        "extension": {
            "description": "The filename extension",
            "type": "string",
            "pattern": "^\\..*"
        }
    }
}