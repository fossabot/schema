{
	"$schema" : "http://json-schema.org/draft-04/schema",
	"description": "Meta-schema for versioned JSON schema",
	"allOf": [
		{
			"$ref": "http://json-schema.org/draft-04/schema"
		},
		{
			"properties": {
                "$version": {
                    "type": "string",
                    "pattern": "^[0-9]+.[0-9]+.[0-9]+$"
                }
			},
			"required": [ "version" ]
		}
	]
}
